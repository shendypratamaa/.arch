#!/bin/sh

WALL_PATH="$HOME/Pictures/wallpaper"

if [ -z "$1" ]; then
    WALL="$(find "$WALL_PATH/" | grep -iE '(jpg|png)' | shuf -n1)"
else
    WALL="$1"
fi

convert "$WALL" "$HOME/.cache/tmp/bg.jpg"
xwallpaper --zoom "$HOME/.cache/tmp/bg.jpg"
wal -c
wal -i "$HOME/.cache/tmp/bg.jpg"
xdotool key super+F5
suckless
