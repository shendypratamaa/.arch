#!/bin/sh

if [ "$1" = "f" ]; then
    maim -o "$HOME/Pictures/screenshoot/$(date +%s).png"
    notify-send 'Screenshoot Successfuly!'
elif [ "$1" = "c" ]; then
    maim -o --select | tee "$HOME/Pictures/screenshoot/$(date +%s).png" | xclip -selection c -t image/png
    notify-send 'Screenshoot Successfuly!'
else
    notify-send 'Execute Screenshoot: [f/c]'
fi

