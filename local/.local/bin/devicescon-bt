#!/bin/sh

DEVICE="$(cat "$HOME/data/btdevices")"

notify_connected() {
    STATUS="$(cat "$HOME/.cache/tmp/bt.connection" | tail -1 | awk '{print $2}')"
    if [ "$STATUS" = "successful" ]; then
        notify-send "Devices connected successfuly"
    else
        notify-send "Devices not connected!"
    fi
}

if [ "$DEVICE" != "" ]; then
    bluetoothctl connect "$DEVICE" > "$HOME/.cache/tmp/bt.connection"
    notify_connected
fi
