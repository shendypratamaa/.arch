#!/bin/bash

# because when direct call browser inside terminal on asahi linux showing
# a bunch off error about GPU,and we must check before call it
BROWSERISOPEN="$(ps aux | grep -i "$BROWSER" | head -1 | awk '{print $11}')"

SEARCH=(
    github
    reddit
    stackoverflow
    google
    youtube
    devto
    freecodecamp
    monkeytype
    localdev
)

echo "${SEARCH[@]}" > "$HOME/data/search_url"

DATA=$(cat "$HOME/data/search_url" | tr ' ' '\n' | sort)
SELECT=$(echo "$DATA" | dmenu -i -l 10 -p "where you want to go: ")

if [ "$SELECT" = "google" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then
    DMENU_QUERY=$(dmenu -p "search something : " <&-)
    URL="https://www.google.com/search?q=$DMENU_QUERY"
    xdg-open "$URL"
elif [ "$SELECT" = "youtube" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then
    DMENU_QUERY=$(dmenu -p "search something : " <&-)
    URL="https://youtube.com/results?search_query=$DMENU_QUERY"
    xdg-open "$URL"
elif [ "$SELECT" = "stackoverflow" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then
    DMENU_QUERY=$(dmenu -p "search something : " <&-)
    URL="https://stackoverflow.com/search?q=$DMENU_QUERY"
    xdg-open "$URL"
elif [ "$SELECT" = "reddit" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then DMENU_QUERY=$(dmenu -p "search something : " <&-)
    URL="https://www.reddit.com/search/?q=$DMENU_QUERY"
    xdg-open "$URL"
elif [ "$SELECT" = "github" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then
    DMENU_QUERY=$(dmenu -p "search something : " <&-)
    URL="https://github.com/search?q=$DMENU_QUERY&type=repositories"
    xdg-open "$URL"
elif [ "$SELECT" = "devto" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then
    DMENU_QUERY=$(dmenu -p "search something : " <&-)
    URL="https://dev.to/search?q=$DMENU_QUERY"
    xdg-open "$URL"
elif [ "$SELECT" = "freecodecamp" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then
    DMENU_QUERY=$(dmenu -p "search something : " <&-)
    URL="https://freecodecamp.org/news/search/?query=$DMENU_QUERY"
    xdg-open "$URL"
elif [ "$SELECT" = "monkeytype" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then
    URL="https://monkeytype.com"
    xdg-open "$URL"
elif [ "$SELECT" = "localdev" ] && [ "$BROWSERISOPEN" = "/usr/lib/firefox/firefox" ] ; then
    DMENU_QUERY=$(dmenu -p "search something : " <&-)
    URL="http://localhost:$DMENU_QUERY"
    xdg-open "$URL"
else
    notify-send "Search Information" "please make sure borwser is running and please select url options"
fi
