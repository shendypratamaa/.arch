# screen shoot
super + ctrl + p
    screenshoot c

super + shift + p
    screenshoot f

# volume
super + F12
    volume -u; kill -34 "$(cat ~/.cache/pidofbar)"

super + F11
    volume -d; kill -34 "$(cat ~/.cache/pidofbar)"

# screen brightness
super + F1
    brightness -d

super + F2
    brightness -u

# keyboard brightness
super + control + equal
    kb-brightness -u

super + control + minus
    kb-brightness -d

# transparent
super + shift + t
    transparent
