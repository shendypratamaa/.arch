# screen shoot
super + shift + c
    screenshoot c

super + shift + f
    screenshoot f

# transparent
super + shift + t
    transparent

# volume
super + F12
    volume -u; kill -34 "$(cat ~/.cache/pidofbar)"

super + F11
    volume -d; kill -34 "$(cat ~/.cache/pidofbar)"

# screen brightness
super + F1
    brightness -d

super + F2
    brightness -u

# keyboard brightness
super + F4
    kb-brightness -u

super + F3
    kb-brightness -d
